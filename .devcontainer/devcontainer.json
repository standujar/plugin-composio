{
  "name": "embed-repo",
  "dockerFile": "Dockerfile",
  "build": {
    "args": {
      "NODE_VER": "23.5.0",
      "AWS_PROD_ACCOUNT_ID": "784570954907",
      "AWS_PREPROD_ACCOUNT_ID": "685993304778",
      "AWS_ROLE_NAME": "${localEnv:AWS_ROLE_NAME:dev}",
      "AWS_SSO_START_URL": "https://kenny.awsapps.com/start/",
      "AWS_SSO_REGION": "eu-west-3",
      "CODEARTIFACT_REPOSITORY": "npm",
      "CODEARTIFACT_DOMAIN": "kenny",
      "CODEARTIFACT_TOOL": "npm"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscode.json-language-features",
        "vscode.css-language-features",
        "biomejs.biome",
        "ms-azuretools.vscode-docker",
        "github.vscode-pull-request-github",
        "shd101wyy.markdown-preview-enhanced",
        "ms-vsliveshare.vsliveshare@1.0.5918",
        "redhat.vscode-yaml",
        "github.copilot"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.autoSave": "afterDelay",
        "editor.autoSaveDelay": 1000,
        "extensions.autoUpdate": false,
        "extensions.autoCheckUpdates": false
      }
    }
  },
  "features": {},
  "forwardPorts": [],
  "postCreateCommand": "bun install",
  "remoteUser": "node",
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached"
  ]
}
